while True:
    data_type = int(input("What is your starting data type?"))
    
    if data_type == 1:
        binary = input("Please Enter your binary value")
        decimal = binary_to_decimal(binary)
        hex_code = decimal_to_hex(decimal)
        rgb = hex_to_rgb(hex_code)
        print(binary, decimal, hex_code, rgb)
        
    if data_type == 2:
        decimal = input("Please Enter your decimal value")
        binary = decimal_to_binary(decimal)
        hex_code = decimal_to_hex(decimal)
        rgb = hex_to_rgb(hex_code)
        
        
    if data_type == 3:
        hex_code = input("Please Enter your Hex value")
        decimal = hex_to_decimal(hex_code)
        binary = decimal_to_hex(decimal)
        rgb = hex_to_rgb(hex_code)
        
    if data_type == 4:
        rgb = input("Please Enter your RGB value")
        hex_code = rgb_to_hex(rgb)
        decimal = hex_to_decimal(hex_code)
        binary = decimal_to_binary(decimal)
        
